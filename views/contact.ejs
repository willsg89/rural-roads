<%- include('header') %>

    <h1 class="title col-lg-12">CONTATO</h1>

    <div class="inner-content about">
        <p style="color:white">Entre em contato conosco através do email:</p>
        <a href="mailto:ruralroadsband@gmail.com">
            <p>ruralroadsband@gmail.com</p>
        </a>
        <br />
        <p style="color:white">Ou preencha o formulário:</p>
        <form method="POST" action="/contact/send">
            <div class="form-group">
                <label for="name" style="color:white" >Nome:</label>
                <input type="text" required="required" class="form-control form-control-sm col-lg-12 col-12" id="name" aria-describedby="emailHelp" >
            </div>

            <div class="form-group">
                <label for="telephone" style="color:white" > Telefone:</label>
                <input type="tel" class="form-control form-control-sm col-lg-6 col-sm-12" id="telephone" aria-describedby="emailHelp">
            </div>

            <div class="form-group">
                <label for="email" style="color:white" >Email:</label>
                <input type="email" class="form-control form-control-sm col-lg-12 col-sm-12" id="email" aria-describedby="emailHelp" >
            </div>
            <div class="form-group">
                <label for="message" style="color:white" >Mensagem:</label>
                <textarea required="required" class="form-control form-control-sm col-lg-12 col-sm-12" id="message" rows="5"></textarea>
            </div>
                <button type="submit" style="margin-right:10px;" class="btn btn-outline-warning">Enviar</button>
                <button type="button" class="btn btn-outline-secondary">Limpar</button>
        </form>
    </div>


<%- include('footer') %>
